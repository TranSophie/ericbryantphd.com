  url = {https://www.ncbi.nlm.nih.gov/pubmed/28319113},
}

@Article{2017-07-Kuscu-Adli,
  title = {{CRISPR}-{STOP}: gene silencing through base-editing-induced nonsense mutations},
  author = {Cem Kuscu and Mahmut Parlak and Turan Tufan and Jiekun Yang and Karol Szlachta and Xiaolong Wei and Rashad Mammadov and Mazhar Adli},
  year = {2017},
  month = {Jul},
  journal = {Nature Methods},
