@Article{2016-06-Xu-Xiao,
  title = {Involvement of budding yeast {Rad5} in translesion {DNA} synthesis through physical interaction with {Rev1}},
  author = {Xin Xu and Aiyang Lin and Cuiyan Zhou and Susan R Blackwell and Yiran Zhang and Zihao Wang and Qianqian Feng and Ruifang Guan and Michelle D Hanna and Zhucheng Chen and Wei Xiao},
