@Article{2010-12-Bandyopadhyay-Ideker,
  title = {Rewiring of genetic networks in response to {DNA} damage},
  author = {Sourav Bandyopadhyay and Monika Mehta and Dwight Kuo and Min-Kyung Sung and Ryan Chuang and Eric J Jaehnig and Bernd Bodenmiller and Katherine Licon and Wilbert Copeland and Michael Shales and Dorothea Fiedler and Janusz Dutkowski and Aude Gu{\'e}nol{\'e} and Haico {van Attikum} and Kevan M Shokat and Richard D Kolodner and Won-Ki Huh and Ruedi Aebersold and Michael-Christopher Keogh and Nevan J Krogan and Trey Ideker},
  year = {2010},
  month = {Dec},
  journal = {Science (New York, N.Y.)},
  volume = {330},
  number = {6009},
  pages = {1385-9},
  eprint = {21127252},
  doi = {10.1126/science.1195618},
  language = {eng},
  issn = {1095-9203},
  abstract = {Although cellular behaviors are dynamic, the networks that govern these behaviors have been mapped primarily as static snapshots. Using an approach called differential epistasis mapping, we have discovered widespread changes in genetic interaction among yeast kinases, phosphatases, and transcription factors as the cell responds to DNA damage. Differential interactions uncover many gene functions that go undetected in static conditions. They are very effective at identifying DNA repair pathways, highlighting new damage-dependent roles for the Slt2 kinase, Pph3 phosphatase, and histone variant Htz1. The data also reveal that protein complexes are generally stable in response to perturbation, but the functional relations between these complexes are substantially reorganized. Differential networks chart a new type of genetic landscape that is invaluable for mapping cellular responses to stimuli.},
  eprinttype = {pubmed},
  url = {https://www.ncbi.nlm.nih.gov/pubmed/21127252},
}

@Article{2013-01-Gunol-vanAttikum,
  title = {Dissection of {DNA} damage responses using multiconditional genetic interaction maps},
  author = {Aude Gu{\'e}nol{\'e} and Rohith Srivas and Kees Vreeken and Ze Zhong Wang and Shuyi Wang and Nevan J Krogan and Trey Ideker and Haico {van Attikum}},
  year = {2013},
  month = {Jan},
  journal = {Molecular cell},
  volume = {49},
  number = {2},
  pages = {346-58},
  eprint = {23273983},
  doi = {10.1016/j.molcel.2012.11.023},
  language = {eng},
  issn = {1097-4164},
  abstract = {To protect the genome, cells have evolved a diverse set of pathways designed to sense, signal, and repair multiple types of DNA damage. To assess the degree of coordination and crosstalk among these pathways, we systematically mapped changes in the cell's genetic network across a panel of different DNA-damaging agents, resulting in ~1,800,000 differential measurements. Each agent was associated with a distinct interaction pattern, which, unlike single-mutant phenotypes or gene expression data, has high statistical power to pinpoint the specific repair mechanisms at work. The agent-specific networks revealed roles for the histone acetyltranferase Rtt109 in the mutagenic bypass of DNA lesions and the neddylation machinery in cell-cycle regulation and genome stability, while the network induced by multiple agents implicates Irc21, an uncharacterized protein, in checkpoint control and DNA repair. Our multiconditional genetic interaction map provides a unique resource that identifies agent-specific and general DNA damage response pathways.},
  eprinttype = {pubmed},
  url = {https://www.ncbi.nlm.nih.gov/pubmed/23273983},
}

@Article{2015-01-Hustedt-Gasser,
  title = {Yeast {PP4} interacts with {ATR} homolog {Ddc2}-{Mec1} and regulates checkpoint signaling},
  author = {Nicole Hustedt and Andrew Seeber and Ragna Sack and Monika Tsai-Pflugfelder and Bhupinder Bhullar and Hanneke Vlaming and Fred {van Leeuwen} and Aude Gu{\'e}nol{\'e} and Haico {van Attikum} and Rohith Srivas and Trey Ideker and Kenji Shimada and Susan M Gasser},
